<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.android.musicapp.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".playlistbob"
            android:label="Bob Dylan"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.android.musicapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicapp.MainActivity" />
        </activity>
        <activity
            android:name=".playlistnina"
            android:label="Nina Simone"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.android.musicapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicapp.MainActivity" />
        </activity>
        <activity
            android:name=".playlistrolling"
            android:label="The Rolling Stones"
            android:launchMode="singleTop">
            android:parentActivityName="com.example.android.musicapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicapp.MainActivity" />
        </activity>
        <activity
            android:name=".playlistgorillaz"
            android:label="Gorillaz"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.android.musicapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicapp.MainActivity" />
        </activity>
        <activity
            android:name=".playlistgambino"
            android:label="Childish Gambino"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.android.musicapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicapp.MainActivity" />
        </activity>
    </application>
</manifest>